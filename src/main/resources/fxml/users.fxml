<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.farouk.controllers.UsersController"
      spacing="0" style="-fx-background-color: #f5f7fa;">

    <padding>
        <Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/>
    </padding>

    <!-- Main Card Container -->
    <VBox styleClass="card" spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/>
        </padding>

        <!-- Header with Actions -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="ðŸ‘¥ Users Management" styleClass="card-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Search Field -->
            <TextField fx:id="searchField" promptText="ðŸ” Search users..." prefWidth="250.0" prefHeight="40.0"
                       styleClass="text-field"/>

            <!-- Add User Button -->
            <Button fx:id="addButton" text="+ Add User" onAction="#handleAddUser" prefHeight="40.0"
                    styleClass="primary-button">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Button>

            <!-- Refresh Button -->
            <Button fx:id="refreshButton" text="ðŸ”„" onAction="#handleRefresh" prefWidth="40.0" prefHeight="40.0"
                    styleClass="secondary-button">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
        </HBox>

        <!-- Separator -->
        <Separator/>

        <!-- Users Table -->
        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="130.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="roleName"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="statusColumn" text="Status" prefWidth="90.0">
                    <cellValueFactory>
                        <PropertyValueFactory property="status"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="250.0" sortable="false">
                </TableColumn>
            </columns>

            <placeholder>
                <Label text="No users found" style="-fx-text-fill: #999; -fx-font-size: 16px;"/>
            </placeholder>
        </TableView>

        <!-- Separator -->
        <Separator/>

        <!-- Footer with Stats -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <padding>
                <Insets top="5.0"/>
            </padding>

            <Label fx:id="statsLabel" text="Total Users: 0" style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-font-size: 14px;"/>

            <Label fx:id="activeStatsLabel" text="Active: 0" styleClass="badge-success">
                <font>
                    <Font size="13.0"/>
                </font>
            </Label>

            <Label fx:id="blockedStatsLabel" text="Blocked: 0" styleClass="badge-danger">
                <font>
                    <Font size="13.0"/>
                </font>
            </Label>
        </HBox>

    </VBox>

</VBox>
