<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.farouk.controllers.UsersController"
      spacing="20.0" styleClass="content-area">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Header with Actions -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label text="Users Management" styleClass="form-title">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Search Field -->
        <TextField fx:id="searchField" promptText="ðŸ” Search users..." prefWidth="250.0" prefHeight="35.0"
                   styleClass="text-field"/>

        <!-- Add User Button -->
        <Button fx:id="addButton" text="+ Add User" onAction="#handleAddUser" prefHeight="35.0"
                styleClass="primary-button">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>

        <!-- Refresh Button -->
        <Button fx:id="refreshButton" text="ðŸ”„" onAction="#handleRefresh" prefWidth="35.0" prefHeight="35.0"
                styleClass="secondary-button"/>
    </HBox>

    <!-- Users Table -->
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200.0">
                <cellValueFactory>
                    <PropertyValueFactory property="email"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="130.0">
                <cellValueFactory>
                    <PropertyValueFactory property="phone"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="roleColumn" text="Role" prefWidth="100.0">
                <cellValueFactory>
                    <PropertyValueFactory property="roleName"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="statusColumn" text="Status" prefWidth="90.0">
                <cellValueFactory>
                    <PropertyValueFactory property="status"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="250.0" sortable="false">
            </TableColumn>
        </columns>

        <placeholder>
            <Label text="No users found" styleClass="field-label"/>
        </placeholder>
    </TableView>

    <!-- Footer with Stats -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="statsLabel" text="Total Users: 0" styleClass="field-label">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <Label fx:id="activeStatsLabel" text="Active: 0" styleClass="success-label">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <Label fx:id="blockedStatsLabel" text="Blocked: 0" styleClass="error-label">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </HBox>

</VBox>
