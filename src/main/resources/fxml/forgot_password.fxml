<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.farouk.controllers.ForgotPasswordController"
            prefHeight="600.0" prefWidth="900.0" styleClass="root">

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="ðŸŒ¾ AgriCloud" styleClass="app-title">
                <font>
                    <Font name="System Bold" size="48.0"/>
                </font>
            </Label>
            <Label text="Reset Your Password" styleClass="app-subtitle">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
        </VBox>

        <!-- Forgot Password Form -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-container" maxWidth="450.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>

            <!-- Step 1: Email Input -->
            <VBox fx:id="emailStep" spacing="15.0">
                <Label text="Enter Your Email" styleClass="form-title">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>

                <Label text="We'll send you a 6-digit reset code" styleClass="field-label">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>

                <VBox spacing="8.0">
                    <Label text="Email" styleClass="field-label">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"
                               prefHeight="40.0"/>
                </VBox>

                <Button fx:id="sendCodeButton" text="Send Reset Code" onAction="#handleSendCode"
                        prefWidth="370.0" prefHeight="45.0" styleClass="primary-button">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Button>
            </VBox>

            <!-- Step 2: Code and New Password -->
            <VBox fx:id="codeStep" spacing="15.0" managed="false" visible="false">
                <Label text="Reset Password" styleClass="form-title">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>

                <Label text="Enter the code we sent to your email" styleClass="field-label">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Label>

                <VBox spacing="8.0">
                    <Label text="Reset Code (6 digits)" styleClass="field-label">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="codeField" promptText="Enter 6-digit code" styleClass="text-field"
                               prefHeight="40.0"/>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="New Password" styleClass="field-label">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="newPasswordField" promptText="Minimum 6 characters" styleClass="text-field"
                                   prefHeight="40.0"/>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="Confirm Password" styleClass="field-label">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" styleClass="text-field"
                                   prefHeight="40.0"/>
                </VBox>

                <Button fx:id="resetButton" text="Reset Password" onAction="#handleResetPassword"
                        prefWidth="370.0" prefHeight="45.0" styleClass="primary-button">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Button>

                <Hyperlink text="Resend Code" onAction="#handleResendCode" styleClass="hyperlink"/>
            </VBox>

            <!-- Message Label (for errors and success) -->
            <Label fx:id="messageLabel" wrapText="true" visible="false" styleClass="error-label"/>

            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Remember your password?" styleClass="link-label"/>
                <Hyperlink text="Back to Login" onAction="#handleBackToLogin" styleClass="hyperlink"/>
            </HBox>
        </VBox>

        <!-- Footer -->
        <Label text="Â© 2026 AgriCloud - Secure Password Recovery" styleClass="footer-label">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>

    </VBox>

</AnchorPane>
