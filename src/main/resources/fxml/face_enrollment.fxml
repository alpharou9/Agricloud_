<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" styleClass="enrollment-dialog"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.farouk.controllers.FaceEnrollmentController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="Face Recognition Enrollment" styleClass="title">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <!-- Camera Preview -->
    <ImageView fx:id="cameraView" fitWidth="480" fitHeight="360"
               preserveRatio="true" styleClass="camera-frame"/>

    <!-- Instructions -->
    <Label fx:id="instructionLabel" text="Look straight at the camera"
           styleClass="instruction-label" wrapText="true" maxWidth="480">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>

    <!-- Progress Bar -->
    <VBox spacing="8" alignment="CENTER">
        <ProgressBar fx:id="progressBar" progress="0.0" prefWidth="400"/>
        <Label fx:id="statusLabel" text="Captures: 0/5" styleClass="status-label">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="captureButton" text="Capture" onAction="#handleCapture"
                prefWidth="120" prefHeight="40" styleClass="primary-button">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>

        <Button fx:id="finishButton" text="Finish" onAction="#handleFinish"
                prefWidth="120" prefHeight="40" styleClass="success-button" disable="true">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>

        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                prefWidth="120" prefHeight="40" styleClass="secondary-button">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
    </HBox>

    <!-- Help Text -->
    <Label text="Follow the instructions and capture 5 different angles for best results."
           styleClass="help-text" wrapText="true" maxWidth="480">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>

</VBox>
