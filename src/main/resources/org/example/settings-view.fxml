<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.SettingsController"
      style="-fx-background-color: -agri-bg;">

    <!-- Header -->
    <VBox spacing="2" styleClass="page-header">
        <Label text="Settings" styleClass="page-title"/>
        <Label text="Configure application preferences" styleClass="page-subtitle"/>
    </VBox>

    <VBox spacing="16">
        <padding><Insets top="24" right="28" bottom="20" left="28"/></padding>

        <!-- Theme card -->
        <VBox spacing="12" styleClass="card">
            <Label text="Appearance" styleClass="card-title"/>
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Label text="Dark Mode" style="-fx-font-size: 13px; -fx-text-fill: -agri-text;"/>
                <ToggleButton fx:id="themeToggle" text="OFF" styleClass="toggle-btn"/>
            </HBox>
            <Label text="Switch between light and dark theme"
                   style="-fx-text-fill: -agri-text-muted; -fx-font-size: 11px;"/>
        </VBox>

        <!-- Database card -->
        <VBox spacing="10" styleClass="card">
            <Label text="Database Connection" styleClass="card-title"/>
            <Label text="Host: localhost:3306  |  Database: agricloud  |  User: root"
                   style="-fx-text-fill: -agri-text-muted;"/>
            <Label fx:id="dbStatusLabel" text="Checking..."/>
        </VBox>

        <!-- About card -->
        <VBox spacing="10" styleClass="card">
            <Label text="About AgriCloud" styleClass="card-title"/>
            <Label text="AgriCloud Farm Management System v1.0.0&#10;Built with JavaFX 17 + MySQL"
                   style="-fx-text-fill: -agri-text-muted;"/>
        </VBox>
    </VBox>
</VBox>
