<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controller.OrderController"
           fx:id="rootStack">

    <VBox style="-fx-background-color: transparent;">
        <!-- Page header -->
        <VBox spacing="2" styleClass="page-header">
            <Label text="Orders" styleClass="page-title"/>
            <Label text="Track and manage customer orders" styleClass="page-subtitle"/>
        </VBox>

        <VBox styleClass="page-body" VBox.vgrow="ALWAYS">
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="products-scroll" VBox.vgrow="ALWAYS">
                <VBox spacing="16">
                    <padding><Insets top="4" right="4" bottom="4" left="4"/></padding>

                    <!-- Top bar -->
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <padding><Insets bottom="8"/></padding>
                        <Label text="Order List" styleClass="card-title" style="-fx-padding: 0;"
                               HBox.hgrow="ALWAYS"/>
                        <Button text="+ New Order" styleClass="btn-primary"
                                onAction="#onAddOrder"/>
                    </HBox>

                    <!-- Order list -->
                    <VBox fx:id="orderListBox" spacing="8"/>
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>
</StackPane>
