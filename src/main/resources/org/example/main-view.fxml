<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.MainController">

    <!-- Sidebar -->
    <VBox styleClass="sidebar">
        <VBox spacing="2" styleClass="sidebar-logo">
            <Label text="AgriCloud" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label text="Farm Management System" styleClass="subtitle"
                   style="-fx-text-fill: #81C784; -fx-font-size: 11px;"/>
        </VBox>

        <VBox styleClass="sidebar-menu">
            <Button fx:id="dashBtn" text="Dashboard" styleClass="menu-item" maxWidth="Infinity"
                    onAction="#onDashboard"/>
            <Button fx:id="prodBtn" text="Products" styleClass="menu-item" maxWidth="Infinity"
                    onAction="#onProducts"/>
            <Button fx:id="ordBtn" text="Orders" styleClass="menu-item" maxWidth="Infinity"
                    onAction="#onOrders"/>
            <Button fx:id="setBtn" text="Settings" styleClass="menu-item" maxWidth="Infinity"
                    onAction="#onSettings"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <VBox spacing="4">
            <padding><Insets top="16" right="20" bottom="20" left="20"/></padding>
            <Label text="v1.0.0" style="-fx-text-fill: #5A7A5D; -fx-font-size: 10px;"/>
        </VBox>
    </VBox>

    <!-- Content area with toast layer -->
    <StackPane HBox.hgrow="ALWAYS">
        <StackPane fx:id="contentArea" styleClass="content-area"/>
        <StackPane fx:id="toastLayer" pickOnBounds="false" alignment="TOP_RIGHT">
            <padding><Insets top="16" right="16"/></padding>
        </StackPane>
    </StackPane>
</HBox>
